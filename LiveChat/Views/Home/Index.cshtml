@model HomeViewModel
@{
    ViewData["Title"] = "Live chat";
}


<div class="container">
    <div class="row">
        <div class="col-4">

            @foreach (var room in Model.Rooms)
            {
                var active = room.Key == 1 ? "active" : "";
                <button type="button" class="room-button btn-outline-dark btn-lg @active" data-roomId="@room.Key">@room.Value</button>

                <br />
            }

        </div>

        <div class="col-8">
            <div class="row" >
                <div class="col-8" id="messagesList">
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <input class="form-control" width="250px" type="text" placeholder="input msg here..." id="messageInput">
                </div>
                <div class="col-2">
                    <input type="button" class="btn btn-primary" id="sendButton" value="Send" />
                </div>
            </div>
        </div>

    </div>
    </div>
    @section scripts {
        <script src="~/js/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/chat.js"></script>
    }
